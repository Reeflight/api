{
  "name": "api",
  "version": "0.1.0",
  "description": "The Official Reeflight API",
  "main": "dist/api.js",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "start": "node ./dist/index.js",
    "watch": "tend",
    "test": "test",
    "heroku-prebuild": "npm install --only=dev",
    "heroku-postbuild": "rollup --config rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reeflight/api.git"
  },
  "keywords": [
    "reeflight",
    "reeflight-api"
  ],
  "author": "Glenn Vandeuren <vandeurenglenn@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reeflight/api/issues"
  },
  "homepage": "https://github.com/reeflight/api#readme",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "eslint": "^3.9.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "tend": "^0.5.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "dependencies": {
    "express": "^4.14.0",
    "firebase": "^3.5.2",
    "http2": "^3.3.6",
    "node-bluetooth": "^1.1.0",
    "wireless": "^0.3.2"
  }
}
