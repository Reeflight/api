{
  "name": "api",
  "version": "0.1.0",
  "description": "The Official Reeflight API",
  "main": "dist/api.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "backed -b",
    "start": "node ./dist/index.js",
    "watch": "tend",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reeflight/api.git"
  },
  "keywords": [
    "reeflight",
    "reeflight-api"
  ],
  "author": "Glenn Vandeuren <vandeurenglenn@gmail.com>",
  "contributors": [
    "Andrew Vanardennen <Andrew.Vanardennen@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reeflight/api/issues"
  },
  "homepage": "https://github.com/reeflight/api#readme",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-es2016": "^6.24.1",
    "eslint": "^3.9.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "tend": "^0.5.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "dependencies": {
    "backed": "^0.2.4",
    "body-parser": "^1.17.1",
    "express": "^4.14.0",
    "firebase": "^3.5.2",
    "node-bluetooth": "^1.1.0",
    "node-glob": "^1.2.0",
    "rpi-ap-setup": "^0.2.3",
    "vinyl-read": "^1.0.0",
    "wireless": "^0.3.2"
  },
  "backed": {
    "bundles": [
      {
        "src": "src/rl-api.js",
        "dest": "./dist/rl-api.js",
        "moduleName": "rlApi",
        "format": "iife"
      },
      {
        "src": "src/api.js",
        "dest": "./dist/index.js",
        "format": "cjs",
        "external": [
          "path",
          "http",
          "fs",
          "express"
        ],
        "plugins": {
          "babel": {
            "presets": [
              "es2016"
            ]
          }
        }
      }
    ],
    "sources": [
      {
        "src": [
          "src/*.html"
        ],
        "dest": "dist"
      },
      {
        "src": [
          "node_modules/backed/dist/backed.js"
        ],
        "dest": "dist/node_modules"
      }
    ],
    "watch": [
      {
        "task": "copy",
        "src": [
          "./src/*.html"
        ]
      },
      {
        "task": "build",
        "src": [
          "./src/*.js"
        ]
      }
    ],
    "server": {
      "demo": "dist"
    }
  }
}
